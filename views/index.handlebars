<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="mx-auto" style="width:256px">
        <img src="assets/img/burger.png" />
      </div>
        <h1 class="text-center">Eat da Burger!</h1>
      
    </div>

  </div>

  <div class="row" style="padding-top: 75px">
    <div class="col-6">
      <div class="row">
        
        {{#each burgers}}
          {{#unless devoured}}
            <div class="col-6 padding-10">
              <div class="uneaten">{{burger_name}}</div>
            </div>
            
            <div class="col-6 padding-10">
              <button class="eat btn btn-warning" data-id="{{id}}">Devour!</button>
            </div>
          {{/unless}}
        {{/each}}
        
      </div>
    </div>

    <div class="col-6">
      <div class="eaten paddding-10">
        {{#each burgers}}
          {{#if devoured}}
            {{burger_name}}
          {{/if}}
        {{/each}}
      </div>     
    </div>
  
  </div>

  <div class="row" style="padding-top: 50px">
    <div class="col-12">

        <h3 class="text-center">Add a burger you want to eat:</h3>

        <form>
          <div class="form-row align-items-center">
            {{!-- <label for="burger-name-input">Burger Name:</label> --}}
            <div class="col-6 offset-3">
              <input class="form-control" type="text" id="burger-name-input" placeholder="Boring Hamburger">
            </div>
            <div class="col-auto">
              <button type="submit" id="burger-submit" class="btn btn-danger ">Add Burger</button>
            </div>
          </div>
        </form>

    </div>
  </div>
</div>


